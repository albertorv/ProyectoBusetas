@model IEnumerable<Buseta_DataAccess.Employee>

@{
    ViewBag.Title = "Maintenance Employee";
}
<body id="page1">
   <div class="body1">
   <div class="main">
    <center>
        <header>
<h2><strong>Maintenance Employee</strong></h2>
    <br /><br />

<table id="tabla" class="table table-bordered">
    <tr class="active">
        <th class="active">
           <label>Name </label>
        </th>
        <th class="active">
            <label>LastName </label>
        </th>
        <th class="active">
            <label>Email </label>
        </th>
        <th class="active">
            <label>Telephone </label>
        </th>
        <th class="active">
           <label>Employee Type </label>
        </th>
        <th class="active"><label>Maintenance</label></th>
    </tr>

@foreach (var item in Model) {
    <tr class="success">
        <td td class="active">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td td class="active">
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td td class="active">
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td td class="active">
            @Html.DisplayFor(modelItem => item.telephone)
        </td>
        <td td class="active">
            @Html.DisplayFor(modelItem => item.EmployeeType.name)
        </td>
        <td td class="active">
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
    <button id="BtEmployee" type="button" class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
    </button>
 </header>
<br />
 
    </center>
       </div>
        </div>
    
