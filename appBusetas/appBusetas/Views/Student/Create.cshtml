@model Buseta_DataAccess.Student

@{
    ViewBag.Title = "Create";
}
 
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

 
<center><h2 id="texto1">Create</h2></center>
        <br />
       
    <center>
    <form class="form-horizontal">
            <div class="form-group">
            <label>Name: </label></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>


        <div class="form-group">
            <label>LastName: </label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
        </div>

        <div class="form-group">
            <label>Age: </label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.age)
            @Html.ValidationMessageFor(model => model.age)
        </div>

        <div class="form-group">
            <label>Address: </label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.address)
            @Html.ValidationMessageFor(model => model.address)
        </div>

        <div class="form-group">
            <label>Telephone: </label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.telephone)
            @Html.ValidationMessageFor(model => model.telephone)
        </div>

       <div class="form-group">
           <label>Persona in Chearge: </label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("personInChargeId", String.Empty)
            @Html.ValidationMessageFor(model => model.personInChargeId)
        </div>

        <div class="form-group">
            <label>School: </label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("schoolId", String.Empty)
            @Html.ValidationMessageFor(model => model.schoolId)
        </div>
   </form>
         <br />
        <br />
        <button type="submit"   class="btn btn-primary" value="Create">Create</button>
        <button type="submit"   class="btn btn-default" > @Html.ActionLink("Back to List", "Index")</button>
        
    </center>
        
     }  
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}